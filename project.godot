# Godot Engine configuration file
# It's best edited using the editor UI and not directly,
# since the parameters that go here are not all obvious.
#
# Format:
#   [section] ; section goes between []
#   param=value ; assign values to parameters

config_version=5

# Application settings
[application]

config/name="Patch Jumper" # Game title displayed in window and menus
config/description="You're a stressed engineer. Dodge bugs, grab fixes, keep your HEAD, and push the build before the deadline." # Game description for store listings
config/version="0.0.14" # Version string - increment this to trigger new builds
run/main_scene="res://menu.tscn" # First scene to load when game starts
config/features=PackedStringArray("4.4", "Forward Plus") # Engine features and rendering backend
boot_splash/bg_color=Color(0.972549, 0.976471, 0.980392, 1) # Light background color for splash screen
boot_splash/image="res://splash.png" # Splash screen image
config/icon="res://icon.png" # Application icon

# Display settings
[display]

window/stretch/mode="canvas_items" # Scale UI elements when window is resized

